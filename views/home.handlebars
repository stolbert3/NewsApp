<div class="container">
  <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Huffington Post Headline Scraper</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <!--<li><a href="/saved">Saved Articles</a></li>-->
                    <li>
                      <a class="btn btn-primary" id="scrapeBtn">Scrape Articles</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Huffington Post Headline Scraper</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.headline}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.url}} target="_blank">{{this.url}}</a>
                    <br><br>
                    <!--<button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>-->
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Uh Oh. Looks like we don't have any new articles yet. Click "scrape" for more!</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script src="/javascript/app.js"></script>
